@model SmartGearApp.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3 text-center">Edit Product</h2>

    <form id="editProductForm" data-id="@Model.Id">
        <div class="form-group mb-3">
            <label>Name</label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Category</label>
            <input asp-for="Category" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Price (R)</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" required />
        </div>

        <button type="submit" class="btn btn-warning">üíæ Save Changes</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>

    <div id="resultMessage" class="mt-3"></div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $("#editProductForm").on("submit", function (e) {
            e.preventDefault();
            const id = $(this).data("id");

            const product = {
                id: id,
                name: $("input[name='Name']").val(),
                category: $("input[name='Category']").val(),
                price: parseFloat($("input[name='Price']").val())
            };

            $.ajax({
                url: `/api/productapi/${id}`,
                method: "PUT",
                contentType: "application/json",
                data: JSON.stringify(product),
                success: function () {
                    $("#resultMessage").html('<div class="alert alert-success text-center">‚úÖ Product updated successfully!</div>');
                },
                error: function () {
                    $("#resultMessage").html('<div class="alert alert-danger text-center">‚ùå Failed to update product.</div>');
                }
            });
        });
    </script>
}
