@model SmartGearApp.Models.Product

@{
    ViewData["Title"] = "Add New Product";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3 text-center">Add New Product</h2>

    <form id="createProductForm">
        <div class="form-group mb-3">
            <label>Name</label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Category</label>
            <input asp-for="Category" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Price (R)</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" required />
        </div>

        <button type="submit" class="btn btn-success">✅ Add Product</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>

    <div id="resultMessage" class="mt-3"></div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $("#createProductForm").on("submit", function (e) {
            e.preventDefault();

            const product = {
                name: $("input[name='Name']").val(),
                category: $("input[name='Category']").val(),
                price: parseFloat($("input[name='Price']").val())
            };

            $.ajax({
                url: "/api/productapi",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify(product),
                success: function () {
                    $("#resultMessage").html('<div class="alert alert-success text-center">✅ Product added successfully!</div>');
                    $("form")[0].reset();
                },
                error: function () {
                    $("#resultMessage").html('<div class="alert alert-danger text-center">❌ Failed to add product.</div>');
                }
            });
        });
    </script>
}
